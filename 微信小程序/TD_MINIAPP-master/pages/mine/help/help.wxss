.help_page{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.help_item{
  display: flex;
  flex-direction: row;
  height: 50rpx;
  align-items: center;
  margin-top: 60rpx;
}

.help_item .start{
  width: 24rpx;
  height: 24rpx;
  margin-left: 30rpx;
  background-color: #FFCE00;
}

.help_item .title{
  margin-left: 16rpx;
  color: #353648;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 50rpx;

}

.help_item_content{
  display: flex;
  margin-left: 78rpx;
  margin-right: 78rpx;
  margin-top: 20rpx;
  color: #757685;
  font-size: 32rpx;
  line-height: 50rpx;
}

.help_page_btn{
  height: 120rpx;
  width: 100%;
  line-height: 120rpx;
  font-size: 36rpx;
  color: #353648;
  display: flex;
  justify-content: center;
  background-color: #FFCE00;
}


/*小红电*/
.help_item .start_red{
  width: 24rpx;
  height: 24rpx;
  margin-left: 30rpx;
  background-color: #FD5750;
}


.help_page_btn_red{
  height: 120rpx;
  width: 100%;
  line-height: 120rpx;
  font-size: 36rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  background-color: #FD5750;
}