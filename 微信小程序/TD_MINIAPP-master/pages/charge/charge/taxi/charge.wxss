.charge_page {
  width: 100%;
  height: 100%;
  position: absolute;
}

.charge_body {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
}

.charge_ad_img {
  margin-top: 20rpx;
  background-color: #fff;
  width: 92%;
  height: 240rpx;
  box-shadow: 0 0 6px 0 #dedede;
  border-radius: 2px;
}

.charge_card{
  width: 92%;
  height: 440rpx;
  box-shadow: 0 0 6px 0 #dedede;
  border-radius: 2px;
  margin-top: 40rpx;
  position: relative;
}

.charge_card .priceview{
  position: absolute;
  margin-left: 40rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
}

.priceview .price{
  font-family: PingFangSC-Medium;
  font-size: 60px;
  color: #FFCE00;
  letter-spacing: -1.45px;
  line-height: 84px;
}

.priceview .unit{
  margin-left: 10rpx;
  margin-top: 42px;
  font-family: PingFangSC-Semibold;
  font-size: 20px;
  color: #353648;
  letter-spacing: -1.16px;
  line-height: 28px;
}

.charge_card .image{
  position: absolute;
  width: 160rpx;
  height: 260rpx;
  margin-left: 490rpx;
  margin-top: 114rpx;
}

.point{
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  margin-left: 40rpx;
  background-color: #353648;
  border: 0 solid #353648;
  border-radius: 50%;
}

.content{
  position: absolute;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #353648;
  letter-spacing: -0.87px;
  margin-left: 60rpx;
}


.charge_bottom {
  width: 100%;
  display: flex;
  bottom: 0;
  flex-direction: column;
  position: fixed;
}


.charge_bottom_view {
  background-color: white;
  height: 110rpx;
  border-top: 1px solid #dedede;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.charge_bottom_view .price_view {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.charge_bottom_view .price_view .total_price {
  margin-left: 30rpx;
  color: #353648;
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
}


.pay_btn {
  width: 280rpx;
  height: 110rpx;
  border-radius: 0;
  margin: 0;
  padding: 0;
  background-color: #dedede;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.pay_btn_active {
  color: #353648;
  background-color: #ffce00;
}

button:after {
  border: none;
}

input {
  outline: none;
  border: none;
  list-style: none;
}

/*小红电*/
.priceview .price_red{
  font-family: PingFangSC-Medium;
  font-size: 60px;
  color: #FD5750;
  letter-spacing: -1.45px;
  line-height: 84px;
}

.pay_btn_active_red{
  color: #ffffff;
  background-color: #FD5750;
}