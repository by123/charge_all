<view class="charge_page" style='height:{{contentHeight}}px' bindtap="onPageTap">

  <view class='charge_body' style='height:{{bodyHeight}}px'>
     <view class="charge_ad">
      <adbanner-view data-id="adview" showPage="1" id="adBannerView"></adbanner-view>
    </view>
    <view class='charge_card'>
      <view class='priceview'>
        <view class="{{product == 0 ? 'price' : 'price_red'}}">{{totalPrice}}</view>
        <view class='unit'>元充电</view>
       </view>
       <image class='image' src="{{img_taxi_charge}}" mode='aspectFill'></image>
      <template is="point_item" data="{{...point1}}"></template>
      <template is="point_item" data="{{...point2}}"></template>
      <template is="point_item" data="{{...point3}}"></template>
    </view>

  </view>


 <view class="charge_bottom" style='margin-top:{{bodyHeight}}px'>
    <!-- 底部按钮 -->
    <view class='charge_bottom_view'>

      <view class='price_view'>
        <view class='total_price'>¥{{totalPrice}}</view>
      </view>
      <form bindsubmit="submit" report-submit='true'>
        <button class="pay_btn {{selectIndex == -1 ? '':  (product == 0 ? 'pay_btn_active' : 'pay_btn_active_red')}}" form-type='submit'>支付获取密码 </button>
      </form>
    </view>

  </view>
</view>


<template name="point_item">
    <view class='point' style='margin-top:{{height}}rpx'></view>
    <view class='content' style='margin-top:{{height-16}}rpx'>{{content}}</view>
</template>