}

.payview .symbolprice .price{
   color: #353648;
   font-size: 60rpx;
   margin-left: 10rpx;
}


.payview .paybtn{
  width:280rpx;
  height: 110rpx;
  padding: 0;
  background-color: #DEDEDE;
  color: white;
