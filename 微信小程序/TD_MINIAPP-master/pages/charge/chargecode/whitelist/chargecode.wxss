.chargecode_page{
  width: 100%;
}

.chargecode_page .body{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  position: absolute; 
}

.chargecode_topview{
  width: 100%;
  height: 170rpx;
}


.chargecode_top_image{
   width: 100%;
   height: 372rpx;
   position: absolute;
   z-index: 2;
}



.chargecode_top{
  width:92%;
  background-color: white;
  margin-left: 4%;
  margin-right: 4%;
  box-shadow: 0 0 6px 0 #DEDEDE;
  border-radius: 2px;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 3;
}

.chargecode_top .psw{
  color: #353648;
  font-size: 36rpx;
  line-height: 50rpx;
  margin-top: 40rpx;
}

.chargecode_top .point_view{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 50%;
  justify-content: space-between;
}

.chargecode_top .point{
  width: 32rpx;
  height: 32rpx;
  background-color: #353648;
  border-radius: 32rpx;
}


.chargecode_top .point_select{
   width: 32rpx;
  height: 32rpx;
  background-color: #ffce00;
  border-radius: 32rpx;
}

.chargecode_top .code{
  color: #353648;
  font-size: 80rpx;
  line-height: 112rpx;
  margin-top: 20rpx;
  font-weight: bold;
  letter-spacing: 60rpx;
  margin-left: 60rpx;
}

.chargecode_top .code2{
  color: #353648;
  font-size: 70rpx;
  line-height: 112rpx;
  margin-top: 20rpx;
  font-weight: bold;
  letter-spacing: 40rpx;
  margin-left: 60rpx;
}

.chargecode_top .help{
  margin-top: 40rpx;
  height: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}


.chargecode_top .help .img{
  height: 40rpx;
  width: 40rpx;
}

.chargecode_top .help .txt{
  line-height: 40rpx;
  margin: 20rpx;
  color: #757685;
  font-size: 30rpx;
}

.chargecode_top .loading{
  margin-top: -20rpx;
  width: 100rpx;
  height: 100rpx;
}

.chargecode_top .loadingtxt{
  color: #757685;
  font-size: 30rpx;
  margin-top: 50rpx;
}

