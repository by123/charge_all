.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.7);
    z-index: 666;
}

.dialog{
   background-color: white;
   width: 100%;
   height: 60%;
   position: absolute;
   top: 40%;
   z-index: 888;
   border-top-left-radius: 20rpx;
   border-top-right-radius: 20rpx;
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: space-between;
}


.dialog .paytitle{
  color: #353648;
  font-weight: bold;
  font-size: 40rpx;
  line-height: 56rpx;
  margin-top: 40rpx;
}

.dialog .paybtn{
  width: 440rpx;
  height: 120rpx;
  display: flex;
  border-style: solid;
  border-width: 1px;
  border-color: #353648;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.active{
  background-color: #FFCE00
}

.dialog .paybtn .time{
  color: #353648;
  font-size: 40rpx;
  margin-left: 40rpx;
}

.dialog .paybtn .price{
  color: #757685;
  font-size: 40rpx;
  margin-right: 40rpx;
}



.dialog .payview{
  background-color: white;
  height: 110rpx;
  border-top: 1px solid #DEDEDE;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.payview .symbolprice{
   display: flex;
   flex-direction: row;
   align-items: center;
   margin-left: 30rpx;
}

.payview .symbolprice .symbol{
