.complain {
    font-size: 30rpx;
    padding-top: 60rpx;
    width: 100%;
    height: 100%;
}

.complain .phone{
    display: flex;
    width: 92.1%;
    line-height: 42rpx;
    margin: 0 30rpx 0 30rpx;
    padding-bottom: 10.2rpx;
    border-bottom: 1rpx solid #DEDEDE;
}

.phone {
    position: relative;
}

.phone .phone-text{
    color: #757685; 
}

.phone .phone-ipt{
    color: #353648;
    text-align: right;
}

.delete-img {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    position: absolute;
    right: 0;
    top: 10rpx;
}

.picture-delete {
    position: absolute;
    /* top:-8rpx; */
    right: -8rpx;
}

.picture-item {
    position: relative;
    margin-left: 20rpx;
}

.complain .flex{
    flex: 1;
}

.textarea-section {
    width: 690rpx;
    height: 276rpx;
    border: 0 solid #F4F4F6;
    box-shadow: 1px 2px 10px 0 #DEDEDE;
    border-radius: 2px;
    margin: 59.8rpx 30rpx 60rpx 30rpx;
    position: relative;
}

.textarea-section .point{
    position: absolute;
    color:#F85429;
    left: 30rpx;
    top: 30rpx;
    z-index: 10;
}

.complain-textarea {
    position: absolute;
    display: block;
    /* margin: 59.8rpx 30rpx 60rpx 30rpx; */
    /* padding: 30rpx 0 0 70rpx; */
    width: 620rpx;
    height: 246rpx;
    color: #353648;
    top: 30rpx;
    left: 70rpx;
}

.upload-picture-wrapper{
    color: #9C9C9C;
}

.get-picture .picture-img {
    display: inline-block;
    width: 77.2rpx;
    height: 65.6rpx;
    margin: 40rpx 0 28.6rpx 61.4rpx;
}

.get-picture {
    width: 200rpx;
    height: 200rpx;
    border: 2rpx solid #DEDEDE;
    color: #9C9C9C;
    margin-left: 4%;
    display: inline-block;
    vertical-align: middle;
}

.upload-picture {
    display: inline-block;
    vertical-align: middle;
    width: 200rpx;
    height: 200rpx;
}

.complain-tips {
    font-size: 26rpx;
    color: #BDBDBD;
    margin: 40rpx 0 0 4%;
}

.complain_page_btn{
    width: 100%;
    line-height: 120rpx;
    font-size: 36rpx;
    color: #353648;
    display: flex;
    justify-content: center;
    background-color: #FFCE00;
    position: absolute;
    bottom: 0;
}

.complain_page_btn_red{
    width: 100%;
    line-height: 120rpx;
    font-size: 36rpx;
    color: #ffffff;
    display: flex;
    justify-content: center;
    background-color: #FD5750;
    position: absolute;
    bottom: 0;
}