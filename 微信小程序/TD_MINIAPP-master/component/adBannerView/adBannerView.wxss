
.bannerview{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.adwiper{
   width: 690rpx;
   margin-top: 20rpx;
   height: 240rpx;
}

.adview{
   width: 100%;
   height: 240rpx;
   position: absolute;
   background-image: linear-gradient(-220deg, #F0F8FF 0%, #FFFFFF 100%);
   box-shadow: 1px 2px 10px 0 #BDBDBD;
   bottom: 0;
}

.adview .adimg{
   width: 100%;
   height: 240rpx;
   position: absolute;
}


.pointView{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.points{
  height: 6rpx;
  margin-top: 20rpx;
  display: flex;
}

.point{
  height: 6rpx;
  background-color: #FFCE00;
  width: 28rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
}

.normal{
  background-color: #DEDEDE;
}
