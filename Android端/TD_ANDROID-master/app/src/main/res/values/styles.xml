<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="tv_scan">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="btn_scan_finish">
        <item name="android:background">@drawable/selector_btn_scan_finish</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="back_style">
        <item name="android:src">@drawable/ic_back_arrow</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="info_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/tv_color</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="info_item2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/tv_color</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="info_item_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">90dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/tv_black</item>
        <item name="android:textColorHint">@color/tv_hint</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="info_item_value2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/tv_black</item>
        <item name="android:textColorHint">@color/tv_hint</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="info_item_value_xx">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">90dp</item>
        <item name="android:textColor">@color/tv_black</item>
        <item name="android:textColorHint">@color/tv_hint</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="title_first">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="title_second">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_marginTop">10dp</item>

        <item name="android:textSize">@dimen/sp_15</item>
    </style>



    <style name="content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tv_color</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>

        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>


    <style name="style_back_icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:src">@drawable/ic_back_arrow_black</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="order_item_style">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/tv_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:text">---</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>




    <style name="style_taxi_item_num">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">12345</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>


    <style name="style_taxi_item_text">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/tv_color</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>



    <style name="style_taxi_item_text_value">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:text">123</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>


    <style name="common_spinner">
        <item name="android:textColor">@color/tv_color</item>
        <!--设置弹窗背景为 系统设置的 应用主色调 在application 的colorPrimay 中配置的颜色, actionBar toolbar 默认使用这个为背景颜色-->
        <item name="android:popupBackground">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <!--设置 spinner 显示位置往下偏移 actionBarSize 的高度, 默认显示是直接显示在 Spinner 的选中项的上方-->
        <item name="android:dropDownVerticalOffset">32dp</item>
        <!--设置选中之后Item 的背景变换 设置背景为 灰色背景色-->
        <!--<item name="android:dropDownSelector">@color/btn_yellow</item>-->
        <!--设置下拉框的 list 的样式, 主要是设置 分割线, 当然也可以设置下拉的 list 的背景颜色-->
        <item name="android:dropDownListViewStyle">@style/spinnerListStyle</item>
        <!--设置显示在 popup 中 item(TextView) 的样式-->
        <item name="android:dropDownItemStyle">@style/itemSpinnerStyle</item>

    </style>

    <!--设置分割线-->
    <style name="spinnerListStyle" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:divider">#dedede</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <!--设置文本颜色 和大小-->
    <style name="itemSpinnerStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>


    <style name="calendar_tv_week_white">
        <item name="android:textColor">@color/tv_black</item>
        <item name="android:textSize">@dimen/calendar_week_txtv_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/calendar_week_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- 自定alertDialog的样式 -->
    <style name="alert_dialog" parent="Theme.AppCompat.Dialog">
        Theme.AppCompat.Light
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
