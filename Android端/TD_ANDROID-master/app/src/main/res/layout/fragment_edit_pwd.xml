<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="fragment"
                type="com.xhd.td.ui.mine.EditPwdFragment"/>

        <variable
                name="viewModel"
                type="com.xhd.td.vm.mine.EditPwdVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/item_back"
            tools:context=".ui.mine.EditPwdFragment">

        <include layout="@layout/title_bar"/>


        <TextView
                android:id="@+id/oldPwTxtv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="当前密码"
                android:textColor="@color/tv_color"
                android:textSize="@dimen/sp_16"
                app:layout_constraintTop_toBottomOf="@+id/toolBar" />

        <EditText
                android:id="@+id/edit_old_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@color/white"
                android:gravity="right"
                android:hint="请输入当前密码"
                android:maxLength="20"
                android:maxLines="1"
                android:textColorHint="@color/tv_hint"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="@+id/oldPwTxtv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/oldPwTxtv" />

        <TextView
                android:id="@+id/newPwTxtv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="新密码"
                android:textColor="@color/tv_color"
                android:textSize="@dimen/sp_16"
                app:layout_constraintTop_toBottomOf="@+id/oldPwTxtv" />

        <EditText
                android:id="@+id/edit_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@color/white"
                android:gravity="right"
                android:hint="请输入新密码"
                android:maxLength="20"
                android:maxLines="1"
                android:textColorHint="@color/tv_hint"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="@+id/newPwTxtv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/newPwTxtv" />

        <TextView
                android:id="@+id/newSecondPwTxtv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="确认新密码"
                android:textColor="@color/tv_color"
                android:textSize="@dimen/sp_16"
                app:layout_constraintTop_toBottomOf="@+id/newPwTxtv" />

        <EditText
                android:id="@+id/edit_new_pwd_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@color/white"
                android:gravity="right"
                android:hint="请再次输入确认新密码"
                android:maxLength="20"
                android:maxLines="1"
                android:textColorHint="@color/tv_hint"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="@+id/newSecondPwTxtv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/newSecondPwTxtv" />

        <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="90dp"
                android:background="@drawable/selector_btn_login"
                android:onClick="@{()->fragment.submit()}"
                android:text="保存"
                android:textColor="@color/select_text_color"
                android:textSize="@dimen/sp_18"
                app:layout_constraintBottom_toBottomOf="parent" />


        <include
                layout="@layout/layout_pb"
                app:pbEnable="@{viewModel.isLoading}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>