<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.xhd.td.model.bean.OrderBean" />

        <import type="com.xhd.td.utils.ExtUtilsKt" />

        <import type="com.xhd.td.adapter.order.OrderListAdapter" />

        <variable
            name="orderAdapter"
            type="OrderListAdapter" />

        <import type="android.view.View" />

        <variable
            name="bean"
            type="OrderBean" />

    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:onClick="@{()->orderAdapter.toDetail(bean)}"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/time"
                style="@style/order_item_style"
                android:layout_marginTop="16dp"
                android:text="@{ExtUtilsKt.formatDataTime(bean.createTime)}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/order_item_style"
                android:text="@{ExtUtilsKt.getOrderStatus(bean.orderStateWeb)}"
                android:textColor="@color/tv_black"
                app:layout_constraintBottom_toBottomOf="@+id/time"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/time" />

            <View
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/line_dash"
                android:paddingStart="160dp"
                android:paddingEnd="160dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/time" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@drawable/semi_circle"
                app:layout_constraintBottom_toBottomOf="@+id/line1"
                app:layout_constraintLeft_toLeftOf="@+id/line1"
                app:layout_constraintTop_toTopOf="@+id/line1" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:rotation="180"
                android:src="@drawable/semi_circle"
                app:layout_constraintBottom_toBottomOf="@+id/line1"
                app:layout_constraintRight_toRightOf="@+id/line1"
                app:layout_constraintTop_toTopOf="@+id/line1" />

            <TextView
                android:id="@+id/id"
                style="@style/order_item_style"
                android:layout_marginTop="10dp"
                android:text="订单编号"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1" />

            <TextView
                android:id="@+id/idValue"
                style="@style/order_item_style"
                android:text="@{bean.orderId}"
                android:textIsSelectable="true"
                app:layout_constraintBottom_toBottomOf="@+id/id"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/id" />

            <TextView
                android:id="@+id/deviceId"
                style="@style/order_item_style"
                android:layout_marginTop="10dp"
                android:text="设备编号"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id" />

            <TextView
                android:id="@+id/deviceIdValue"
                style="@style/order_item_style"
                android:text="@{bean.deviceSn}"
                app:layout_constraintBottom_toBottomOf="@+id/deviceId"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/deviceId" />

            <TextView
                android:id="@+id/mchName"
                style="@style/order_item_style"
                android:layout_marginTop="10dp"
                android:text="商户名称"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/deviceId" />

            <TextView
                android:id="@+id/mchNameValue"
                style="@style/order_item_style"
                android:text="@{bean.mchName}"
                app:layout_constraintBottom_toBottomOf="@+id/mchName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mchName" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/line_dash"
                app:layout_constraintTop_toBottomOf="@+id/mchName" />

            <TextView
                android:id="@+id/notPayMoney"
                style="@style/order_item_style"
                android:layout_marginTop="10dp"
                android:text="@{ExtUtilsKt.getOrderInfo(bean.orderStateWeb)}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:autoSizeMaxTextSize="8sp"
                app:autoSizeMinTextSize="8sp"
                android:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="8dp"
                app:layout_constrainedWidth="true"
                android:id="@+id/notPayMoneyValue"
                style="@style/order_item_style"
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toRightOf="@+id/notPayMoney"
                android:text="@{(bean.orderStateWeb==1||bean.orderStateWeb==2||bean.orderStateWeb==3||bean.orderStateWeb==4)?(bean.orderPriceYuan+@string/yuan): (bean.orderStateWeb==5? (bean.refundingMoneyYuan +@string/yuan) :(bean.refundMoneyYuan+@string/yuan))}"
                app:layout_constraintBottom_toBottomOf="@+id/notPayMoney"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/notPayMoney" />

            <TextView
                android:id="@+id/subMoney"
                style="@style/order_item_style"
                android:layout_marginTop="10dp"
                android:text="下级收益"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/subMoneyValue"
                app:layout_constraintTop_toBottomOf="@+id/notPayMoney" />

            <TextView
                android:id="@+id/subMoneyValue"
                style="@style/order_item_style"
                android:text="@{bean.descendantsTotalProfit+@string/yuan}"
                app:layout_constraintBottom_toBottomOf="@+id/subMoney"
                app:layout_constraintLeft_toRightOf="@+id/subMoney"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/subMoney" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/yajinGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{(bean.orderStateWeb==2||bean.orderStateWeb==3)?View.VISIBLE:View.GONE}"
                app:constraint_referenced_ids="pledgeValue,pledge"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/pledgeValue"
                style="@style/order_item_style"
                android:layout_marginTop="10dp"
                android:text="押金"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/pledge"
                app:layout_constraintTop_toBottomOf="@+id/subMoney" />

            <TextView
                android:id="@+id/pledge"
                style="@style/order_item_style"
                android:text="@{bean.depositPriceYuan+@string/yuan}"
                app:layout_constraintBottom_toBottomOf="@+id/pledgeValue"
                app:layout_constraintLeft_toRightOf="@+id/pledgeValue"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pledgeValue" />


            <TextView
                android:id="@+id/myMoney"
                style="@style/order_item_style"
                android:layout_marginBottom="4dp"
                android:text="我的收益"
                app:layout_constraintBottom_toBottomOf="@+id/myMoneyValue"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/myMoneyValue" />

            <TextView
                android:id="@+id/myMoneyValue"
                style="@style/order_item_style"
                android:layout_marginTop="8dp"
                android:layout_marginRight="0dp"
                android:text="@{bean.myProfit + ``}"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_30"
                app:layout_constraintLeft_toRightOf="@+id/myMoney"
                app:layout_constraintRight_toLeftOf="@+id/yuan"
                app:layout_constraintTop_toBottomOf="@+id/pledge" />

            <TextView
                android:id="@+id/yuan"
                style="@style/order_item_style"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="4dp"
                android:text="@{@string/yuan}"
                app:layout_constraintBottom_toBottomOf="@+id/myMoneyValue"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/billing_shape"
                android:onClick="@{()->orderAdapter.refund(bean)}"
                android:text="退款"
                android:textColor="@color/tv_black"

                android:textSize="@dimen/sp_16"
                android:visibility="@{((bean.orderStateWeb==3||bean.orderStateWeb==2) &amp;&amp;bean.canRefund)?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myMoneyValue" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>