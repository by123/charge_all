<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="viewModel"
                type="com.xhd.td.vm.login.LoginVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:id="@+id/fl_tab_container"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/bottombar_wechat_height"
                android:layout_height="match_parent"/>

        <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/tv_hint"
                app:layout_constraintLeft_toLeftOf="@+id/bottomBar"
                app:layout_constraintRight_toRightOf="@+id/bottomBar"
                app:layout_constraintBottom_toTopOf="@+id/bottomBar"/>


        <com.xhd.td.view.BottomBar
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottombar_wechat_height"
                app:layout_constraintBottom_toBottomOf="parent"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>