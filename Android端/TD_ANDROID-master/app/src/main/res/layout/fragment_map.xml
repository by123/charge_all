<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
                name="fragment"
                type="com.xhd.td.ui.map.MapFragment"/>

        <variable
                name="viewModel"
                type="com.xhd.td.vm.map.MapVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.map.MapFragment">


        <include layout="@layout/title_bar"/>

        <Button android:layout_width="50dp"
                android:layout_height="@dimen/sp_30"
                android:text="确定"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/selector_btn_login"
                android:textColor="@color/select_text_color"
                android:onClick="@{()->fragment.sendSelectedLocationInfo()}"
                app:layout_constraintEnd_toEndOf="@+id/toolBar"
                app:layout_constraintBottom_toBottomOf="@+id/toolBar"
        />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/toolBar"
                app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:elevation="0dp"
                    android:background="@color/white">


                <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="150dp"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_collapseMode="parallax">


                        <com.amap.api.maps.MapView
                                android:id="@+id/map"
                                android:layout_width="0dp"
                                android:layout_height="300dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">
                        </com.amap.api.maps.MapView>

                        <ImageView
                                android:id="@+id/img_center_location"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginBottom="23dp"
                                app:layout_constraintStart_toStartOf="@+id/map"
                                app:layout_constraintEnd_toEndOf="@+id/map"
                                app:layout_constraintTop_toTopOf="@id/map"
                                app:layout_constraintBottom_toBottomOf="@id/map"
                                app:srcCompat="@drawable/map_location_select"/>

                        <ImageView
                                android:id="@+id/img_phone_location"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="15dp"
                                app:layout_constraintEnd_toEndOf="@+id/map"
                                app:layout_constraintBottom_toBottomOf="@id/map"
                                app:srcCompat="@drawable/ic_phone_location"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                        android:id="@+id/rl_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/item_back">

                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <!--<include-->
        <!--layout="@layout/layout_pb"-->
        <!--app:pbEnable="@{viewModel.isLoading}"/>-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>