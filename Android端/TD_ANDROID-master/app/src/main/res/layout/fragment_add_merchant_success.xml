<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <import type="com.xhd.td.ui.home.AddMerchantSuccessFragment"/>

        <variable
                name="fragment"
                type="AddMerchantSuccessFragment"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:background="@color/white">

        <include layout="@layout/title_bar"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:visibility="@{fragment.isMerchant?View.GONE:View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolBar"
                tools:visibility="visible">

            <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="151dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/acount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:drawableLeft="@drawable/shape_dot"
                            android:drawablePadding="4dp"
                            android:text="登录账号"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                            android:id="@+id/acount_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="@{fragment.account}"
                            android:textColor="@color/tv_black"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintLeft_toLeftOf="@+id/acount"
                            app:layout_constraintTop_toBottomOf="@+id/acount"/>

                    <TextView
                            android:id="@+id/pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:drawableLeft="@drawable/shape_dot"
                            android:drawablePadding="4dp"
                            android:text="初始密码"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/acount_value"/>

                    <TextView
                            android:id="@+id/pwd_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="@{fragment.pwd}"
                            android:textColor="@color/tv_black"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintLeft_toLeftOf="@+id/pwd"
                            app:layout_constraintTop_toBottomOf="@+id/pwd"/>

                    <ImageView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_agent_success"
                            app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/fuzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:clickable="true"
                    android:onClick="@{()->fragment.copy()}"
                    android:text="点击复制账号密码"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card"/>

            <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="90dp"
                    android:background="@color/btn"
                    android:onClick="@{()->fragment.close()}"
                    android:text="确定"
                    android:textColor="@color/select_text_color"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="@{!fragment.isMerchant()?View.GONE:View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolBar">

            <ImageView
                    android:id="@+id/img_success"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_result_success"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/tv_success_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="商户账号添加成功"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toLeftOf="@+id/img_success"
                    app:layout_constraintRight_toRightOf="@+id/img_success"
                    app:layout_constraintTop_toBottomOf="@+id/img_success"/>

            <TextView
                    android:id="@+id/shanhuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@{fragment.merchantName}"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_success_tip"
                    app:layout_constraintRight_toRightOf="@+id/tv_success_tip"
                    app:layout_constraintTop_toBottomOf="@+id/tv_success_tip"/>

            <TextView
                    android:id="@+id/shanhuDart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/addshanghu1"
                    android:textColor="#bdbdbd"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintLeft_toLeftOf="@+id/shanhuName"
                    app:layout_constraintRight_toRightOf="@+id/shanhuName"
                    app:layout_constraintTop_toBottomOf="@+id/shanhuName"/>

            <TextView
                    android:id="@+id/tv_operation_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/line"
                    android:drawableRight="@drawable/line"
                    android:drawablePadding="20dp"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="绑定步骤"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toLeftOf="@+id/shanhuDart"
                    app:layout_constraintRight_toRightOf="@+id/shanhuDart"
                    app:layout_constraintTop_toBottomOf="@+id/shanhuDart"/>

            <TextView
                    android:id="@+id/hint1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="31dp"
                    android:text="@string/add_merchant_success_hint_1"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintTop_toBottomOf="@+id/tv_operation_guide"/>

            <TextView
                    android:id="@+id/hint2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="31dp"
                    android:text="@string/add_merchant_success_hint_2"
                    android:textColor="@color/tv_color"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintTop_toBottomOf="@+id/hint1"/>

            <Button
                    android:layout_width="120dp"
                    android:layout_height="42dp"
                    android:background="@drawable/shape_btn_solid_stroke"
                    android:onClick="@{()->fragment.close()}"
                    android:text="确定"
                    android:textColor="@color/redAndBlack"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hint2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>