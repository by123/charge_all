<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:background="@drawable/clickable_white_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/arrow_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/icon_drop_down_arrow_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/node_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="Medium"
        android:textColor="#353648"
        android:text="Tree Node"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/arrow_img"
        app:layout_constraintStart_toEndOf="@+id/arrow_img"
        app:layout_constraintTop_toTopOf="@+id/arrow_img"/>


    <TextView
        android:id="@+id/tv_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"

        android:fontFamily="Regular"
        android:text="全选"
        android:textColor="#757685"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/arrow_img"
        app:layout_constraintEnd_toStartOf="@+id/check_button"
        app:layout_constraintTop_toTopOf="@+id/arrow_img"/>


    <Button
        android:id="@+id/check_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/selector_whitelist_item"
        app:layout_constraintTop_toTopOf="@+id/node_name_view"
        app:layout_constraintBottom_toBottomOf="@+id/node_name_view"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/tv_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </View>

</androidx.constraintlayout.widget.ConstraintLayout>