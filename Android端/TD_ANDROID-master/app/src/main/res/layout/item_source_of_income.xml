<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="bean"
                type="com.xhd.td.model.bean.IncomeTopBeam"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/white">

        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{bean.mchName}"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="退款扣除"
                android:textColor="@color/tv_color"
                android:textSize="@dimen/sp_15"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@+id/name"/>

        <TextView
                android:id="@+id/refundValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@{bean.refundProfitForParentYuan+@string/yuan}"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_15"
                app:layout_constraintLeft_toRightOf="@+id/refund"
                app:layout_constraintTop_toTopOf="@+id/refund"/>


        <TextView
                android:id="@+id/earning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="我的收益"
                android:textColor="@color/tv_color"
                android:textSize="@dimen/sp_15"
                app:layout_constraintRight_toLeftOf="@+id/earningValue"
                app:layout_constraintTop_toTopOf="@+id/earningValue"/>

        <TextView
                android:id="@+id/earningValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{bean.profitForParentYuan+@string/yuan}"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_15"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/refund"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="16dp"
                android:background="#DEDEDE"
                app:layout_constraintTop_toBottomOf="@+id/refund"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>