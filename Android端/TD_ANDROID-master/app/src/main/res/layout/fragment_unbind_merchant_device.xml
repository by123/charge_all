<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
                name="fragment"
                type="com.xhd.td.ui.unbind.UnbindMerchantDeviceFragment"/>


        <variable
                name="viewModel"
                type="com.xhd.td.vm.unbind.UnbindMerchantDeviceVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.unbind.UnbindMerchantDeviceFragment">

        <include layout="@layout/title_bar"/>

        <TextView
                android:id="@+id/tv_unbinding_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColor="@color/waring"
                android:text="@string/unbinding_device_hint"
                app:layout_constraintTop_toBottomOf="@+id/toolBar"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/card_scan_unbinding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="3dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_unbinding_tip">


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/tv_merchant_name"
                        style="@style/style_taxi_item_text_value"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:text="商户名称"
                        android:textColor="@color/textColorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                <View
                        android:id="@+id/line"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/tv_hint"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_merchant_name"/>

                <TextView
                        android:id="@+id/tv_merchant_id"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="商户编号"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/tv_color"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintLeft_toLeftOf="@+id/tv_merchant_name"
                        app:layout_constraintTop_toBottomOf="@+id/line"
                />

                <TextView
                        android:id="@+id/tv_merchant_id_value"
                        style="@style/style_taxi_item_text_value"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_merchant_id"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_merchant_id"/>

                <TextView
                        android:id="@+id/tv_contact_name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="联系人姓名"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/tv_color"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintTop_toBottomOf="@+id/tv_merchant_id"
                        app:layout_constraintLeft_toLeftOf="@+id/tv_merchant_name"

                />

                <TextView
                        android:id="@+id/tv_contact_name_value"
                        style="@style/style_taxi_item_text_value"

                        app:layout_constraintBottom_toBottomOf="@+id/tv_contact_name"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_contact_name"/>

                <TextView
                        android:id="@+id/tv_devices_amount"
                        android:text="设备总数"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/tv_color"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintTop_toBottomOf="@+id/tv_contact_name"
                        app:layout_constraintLeft_toLeftOf="@+id/tv_merchant_name"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                        android:id="@+id/tv_devices_amount_value"
                        style="@style/style_taxi_item_text_value"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_devices_amount"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_devices_amount"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
                android:id="@+id/tv_create_taxi_group"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_merchant"
                android:onClick="@{()->fragment.unbind()}"
                android:gravity="center"
                android:text="批量解绑"
                android:textColor="@color/select_text_color"
                android:textSize="@dimen/sp_18"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <include
                layout="@layout/layout_pb"
                app:pbEnable="@{viewModel.isLoading}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>