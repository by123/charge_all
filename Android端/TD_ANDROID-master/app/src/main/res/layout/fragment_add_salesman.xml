<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="fragment"
                type="com.xhd.td.ui.home.AddSalesmanFragment"/>

        <variable
                name="viewModel"
                type="com.xhd.td.vm.home.AddSalesmanVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.home.AddSalesmanFragment">

        <include layout="@layout/title_bar"/>

        <TextView
                android:id="@+id/tv_salesman_title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/item_back"
                android:gravity="bottom"
                android:paddingStart="16dp"
                android:paddingBottom="8dp"
                android:text="业务员信息"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toBottomOf="@id/toolBar" />

        <TextView
                android:id="@+id/tv_salesman_name"
                style="@style/info_item"
                android:gravity="center_vertical"
                android:text="业务员姓名"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_salesman_title" />

        <EditText
                android:id="@+id/edit_name"
                style="@style/info_item_value"
                android:background="@null"
                android:hint="请输入业务员姓名"
                android:lines="1"
                android:maxLength="26"
                android:maxLines="1"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/tv_hint"
                android:text="@={viewModel.name}"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_salesman_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_salesman_name" />

        <View
                android:id="@+id/line_name"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/tv_hint"
                app:layout_constraintBottom_toBottomOf="@+id/tv_salesman_name" />

        <TextView
                android:id="@+id/tv_phone"
                style="@style/info_item"
                android:gravity="center_vertical"
                android:text="业务员手机"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_salesman_name" />

        <EditText
                android:id="@+id/edit_phone"
                style="@style/info_item_value"
                android:background="@null"
                android:hint="请输入业务员手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:text="@={viewModel.phone}"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/tv_hint"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_phone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_phone" />

        <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/tv_hint"
                app:layout_constraintBottom_toBottomOf="@+id/tv_phone" />

        <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_merchant"
                android:enabled="@{viewModel.name!=null&amp;&amp;viewModel.phone.length()==11}"
                android:gravity="center"
                android:onClick="@{()->viewModel.addSalesman(viewModel.name,viewModel.phone)}"
                android:text="保存"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        <ProgressBar
                android:id="@+id/progress"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.isLoading?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>