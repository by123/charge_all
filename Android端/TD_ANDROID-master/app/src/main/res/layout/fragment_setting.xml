<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="fragment"
                type="com.xhd.td.ui.mine.SettingFragment"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/item_back"
            tools:context=".ui.mine.SettingFragment">

        <include layout="@layout/title_bar"/>


        <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:onClick="@{()->fragment.editPwd()}"
                android:paddingLeft="16dp"
                android:text="修改密码"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/entry"
                app:layout_constraintTop_toBottomOf="@+id/toolBar" />

        <ImageView
                android:id="@+id/entry"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/back_dark"
                app:layout_constraintBottom_toBottomOf="@+id/type"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/type" />

        <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:onClick="@{()->fragment.about()}"
                android:paddingLeft="16dp"
                android:text="关于我们"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/entry"
                app:layout_constraintTop_toBottomOf="@+id/type" />

        <ImageView
                android:id="@+id/about_entry"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/back_dark"
                app:layout_constraintBottom_toBottomOf="@+id/about"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/about" />

        <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:onClick="@{()->fragment.signOut()}"
                android:text="退出登录"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_16"
                app:layout_constraintTop_toBottomOf="@+id/about" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>