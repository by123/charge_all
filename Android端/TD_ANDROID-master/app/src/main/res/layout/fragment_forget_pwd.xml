<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
                name="fragment"
                type="com.xhd.td.ui.login.ForgetPwdFragment"/>


        <variable
                name="viewModel"
                type="com.xhd.td.vm.login.ForgetPwdVM"/>

        <variable
                name="displayHint"
                type="Boolean"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:text="找回密码"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_30"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/img_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="40dp"
                android:onClick="@{()->fragment.close()}"
                android:scaleType="fitXY"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_top_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:autoSizeMinTextSize="@dimen/sp_12"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_16"
                android:visibility="@{displayHint?View.VISIBLE:View.GONE}"
                app:autoSizeMinTextSize="@dimen/sp_12"
                app:layout_constraintBottom_toTopOf="@+id/input_layout_account"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="16dp"
                app:passwordToggleEnabled="true"
                android:hint="输入登录账号"
                android:textColorHint="#bdbdbd"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/tv_title">

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_selector"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_16"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:onClick="@{()->fragment.resend()}"
                android:text="重新发送"
                android:textColor="#76ADF0"
                android:textSize="@dimen/sp_16"
                android:visibility="gone"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="@+id/input_layout_account"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/input_layout_account"
                tools:visibility="visible"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_pwd_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="请再次输入新密码"
                android:textColorHint="#bdbdbd"
                app:passwordToggleEnabled="true"
                android:visibility="gone"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_account"
                tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_pwd_again"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_selector"
                    android:inputType="text"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_16"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/selector_btn_login"
                android:gravity="center"
                android:onClick="@{fragment::next}"
                android:text="下一步"
                android:textColor="@color/select_text_color"
                android:textSize="@dimen/sp_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"/>


        <include
                layout="@layout/layout_pb"
                app:pbEnable="@{viewModel.isLoading}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>