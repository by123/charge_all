<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="fragment"
                type="com.xhd.td.ui.mine.bank.AddCardFragment"/>

        <variable
                name="viewModel"
                type="com.xhd.td.vm.mine.AddCardVM"/>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/item_back"
            tools:context=".ui.mine.bank.AddCardFragment">


        <include layout="@layout/title_bar"/>

        <TextView
                android:id="@+id/accountName"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:gravity="center"
                android:paddingStart="16dp"
                android:text="@{fragment.isAddCompanyCard?@string/bank_corpName:@string/bank_personName}"
                android:textColor="@color/tv_color"
                android:textSize="@dimen/sp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolBar" />

        <EditText
                android:id="@+id/accountNameValue"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:background="@color/white"
                android:gravity="center_vertical|right"
                android:hint="@{fragment.isAddCompanyCard?@string/bank_hintCorpName:@string/bank_hintPersonName}"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/tv_hint"
                android:textSize="@dimen/sp_15"
                app:layout_constraintBottom_toBottomOf="@+id/accountName"
                app:layout_constraintLeft_toRightOf="@+id/accountName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/accountName" />

        <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="@{fragment.isAddCompanyCard?@string/bank_duigong:@string/bank_persion}"
                android:textColor="@color/tv_color"
                android:textSize="@dimen/sp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accountName" />

        <EditText
                android:id="@+id/accountValue"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:background="@color/white"
                android:gravity="center_vertical|right"
                android:hint="@{fragment.isAddCompanyCard?@string/bank_hintDuiGong:@string/bank_hintBank}"
                android:inputType="number"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/tv_hint"
                android:textSize="@dimen/sp_15"
                app:layout_constraintBottom_toBottomOf="@+id/account"
                app:layout_constraintLeft_toRightOf="@+id/account"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/account" />

        <TextView
                android:id="@+id/bankName"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical|left"
                android:paddingLeft="16dp"
                android:text="开户银行"
                android:textColor="@color/tv_color"
                android:textSize="@dimen/sp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/bankNameValue"
                app:layout_constraintTop_toBottomOf="@+id/account" />

        <TextView
                android:id="@+id/bankNameValue"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:background="@color/white"
                android:drawableRight="@drawable/arrow_down"
                android:drawablePadding="4dp"
                android:gravity="center_vertical|right"
                android:hint="请选择开户银行"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:textColorHint="@color/tv_hint"
                app:layout_constraintBottom_toBottomOf="@+id/bankName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bankName" />

        <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{fragment.isAddCompanyCard?View.VISIBLE:View.GONE}"
                app:constraint_referenced_ids="subBankName,subBankNameValue,adds,addsValue" />

        <TextView
                android:id="@+id/subBankName"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="支行名称"
                android:textColor="@color/tv_color"
                android:textSize="@dimen/sp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bankName" />

        <EditText
                android:id="@+id/subBankNameValue"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:background="@color/white"
                android:gravity="center_vertical|right"
                android:hint="请输入支行名称"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/tv_hint"
                android:textSize="@dimen/sp_15"
                app:layout_constraintBottom_toBottomOf="@+id/subBankName"
                app:layout_constraintLeft_toRightOf="@+id/subBankName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/subBankName" />

        <TextView
                android:id="@+id/adds"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:gravity="center_vertical|start"
                android:paddingLeft="16dp"
                android:text="开户行所在地"
                android:textColor="@color/tv_color"
                android:textSize="@dimen/sp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/addsValue"
                app:layout_constraintTop_toBottomOf="@+id/subBankName" />

        <TextView
                android:id="@+id/addsValue"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:background="@color/white"
                android:drawableRight="@drawable/arrow_down"
                android:drawablePadding="4dp"
                android:gravity="center_vertical|end"
                android:hint="请选择账户名称"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/tv_hint"
                app:layout_constraintBottom_toBottomOf="@+id/adds"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/adds" />

        <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/btn220"
                android:onClick="@{()->fragment.checkData()}"
                android:text="保存"
                android:textColor="@color/select_text_color"
                android:textSize="@dimen/sp_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adds" />

        <include
                layout="@layout/layout_pb"
                app:pbEnable="@{viewModel.isLoading}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>