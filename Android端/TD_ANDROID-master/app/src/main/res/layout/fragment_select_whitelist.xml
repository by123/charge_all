<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="fragment"
                type="com.xhd.td.ui.whitelist.SelectWhitelistFragment"/>

        <variable
                name="viewModel"
                type="com.xhd.td.vm.whitelist.WhitelistVM"
                />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.whitelist.SelectWhitelistFragment">

        <include layout="@layout/title_bar"/>




        <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btn_confirm"
                app:layout_constraintTop_toBottomOf="@id/toolBar"
                ></RelativeLayout>


        <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()->fragment.confirm()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#DEC188"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                />


        <include
                layout="@layout/layout_pb"
                app:pbEnable="@{viewModel.isLoading}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>