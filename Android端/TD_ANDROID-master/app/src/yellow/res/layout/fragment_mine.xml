<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="fragment"
                type="com.xhd.td.ui.mine.MineFragment"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            tools:context=".ui.mine.MineFragment">


        <TextView
                android:id="@+id/home_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="我的"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_30"/>


        <TextView
                android:id="@+id/mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_20"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_content_title"/>

        <TextView
                android:id="@+id/mine_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/tv_color"
                android:textSize="@dimen/sp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mine_name"/>

        <ImageView
                android:id="@+id/mine_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_portrait_default"
                app:layout_constraintBottom_toBottomOf="@+id/mine_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mine_name"/>


        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/mine_count"
                app:layout_constraintBottom_toBottomOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".ui.mine.MessageDetailFragment">


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_account"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                >


                    <com.xhd.td.view.TextImageView
                            android:id="@+id/tv_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账户信息"
                            android:textColor="@color/tv_black"
                            android:textSize="@dimen/sp_16"
                            android:drawableStart="@drawable/mine_count"
                            android:drawablePadding="8dp"
                            app:drawableStartHeight="20dp"
                            app:drawableStartWidth="20dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                    />

                    <ImageView
                            android:id="@+id/img_account"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/back_dark"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_account"
                            app:layout_constraintTop_toTopOf="@+id/tv_account"
                            app:layout_constraintEnd_toEndOf="parent"
                    />

                    <View
                            android:id="@+id/line_account"
                            android:layout_width="0dp"
                            android:layout_height="0.5dp"
                            android:background="@color/tv_hint"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_bank_card"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="@+id/layout_account"
                        app:layout_constraintEnd_toEndOf="@+id/layout_account"
                        app:layout_constraintTop_toBottomOf="@+id/layout_account"
                >

                    <com.xhd.td.view.TextImageView

                            android:id="@+id/tv_bank_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="银行卡信息"
                            android:textColor="@color/tv_black"
                            android:textSize="@dimen/sp_16"
                            android:drawableStart="@drawable/mine_bank_card"
                            app:drawableStartHeight="20dp"
                            app:drawableStartWidth="20dp"
                            android:drawablePadding="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                            android:id="@+id/img_bank_card"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/back_dark"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_bank_card"
                            app:layout_constraintTop_toTopOf="@+id/tv_bank_card"
                            app:layout_constraintEnd_toEndOf="parent"
                    />

                    <View
                            android:id="@+id/line_bank_card"
                            android:layout_width="0dp"
                            android:layout_height="0.5dp"
                            android:background="@color/tv_hint"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_agent"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="@+id/layout_account"
                        app:layout_constraintEnd_toEndOf="@+id/layout_account"
                        app:layout_constraintTop_toBottomOf="@+id/layout_bank_card"
                >

                    <com.xhd.td.view.TextImageView

                            android:id="@+id/tv_agent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="代理商管理"
                            android:textColor="@color/tv_black"
                            android:textSize="@dimen/sp_16"
                            android:drawableStart="@drawable/mine_agent"
                            app:drawableStartHeight="20dp"
                            app:drawableStartWidth="20dp"
                            android:drawablePadding="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                            android:id="@+id/img_agent"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/back_dark"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_agent"
                            app:layout_constraintTop_toTopOf="@+id/tv_agent"
                    />

                    <View
                            android:id="@+id/line_agent"
                            android:layout_width="0dp"
                            android:layout_height="0.5dp"
                            android:background="@color/tv_hint"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_unbinding"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="@+id/layout_account"
                        app:layout_constraintEnd_toEndOf="@+id/layout_account"
                        app:layout_constraintTop_toBottomOf="@+id/layout_agent"
                >

                    <com.xhd.td.view.TextImageView
                            android:id="@+id/tv_unbinding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设备解绑"
                            android:textColor="@color/tv_black"
                            android:textSize="@dimen/sp_16"
                            android:drawableStart="@drawable/mine_unbinding"
                            app:drawableStartHeight="20dp"
                            app:drawableStartWidth="20dp"
                            android:drawablePadding="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                            android:id="@+id/img_unbinding"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/back_dark"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_unbinding"
                            app:layout_constraintTop_toTopOf="@+id/tv_unbinding"
                    />

                    <View
                            android:id="@+id/line_unbinding"
                            android:layout_width="0dp"
                            android:layout_height="0.5dp"
                            android:background="@color/tv_hint"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_whitelist"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="@+id/layout_account"
                        app:layout_constraintEnd_toEndOf="@+id/layout_account"
                        app:layout_constraintTop_toBottomOf="@+id/layout_unbinding"
                >
                    <com.xhd.td.view.TextImageView

                            android:id="@+id/tv_whitelist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充电白名单"
                            android:textColor="@color/tv_black"
                            android:textSize="@dimen/sp_16"
                            android:drawableStart="@drawable/mine_charge_whitelist"
                            android:drawablePadding="8dp"
                            app:drawableStartHeight="20dp"
                            app:drawableStartWidth="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                    />

                    <ImageView
                            android:id="@+id/img_whitelist"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/back_dark"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_whitelist"
                            app:layout_constraintTop_toTopOf="@+id/tv_whitelist"
                    />

                    <View
                            android:id="@+id/line_whitelist"
                            android:layout_width="0dp"
                            android:layout_height="0.5dp"
                            android:background="@color/tv_hint"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_message_center"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="@+id/layout_account"
                        app:layout_constraintEnd_toEndOf="@+id/layout_account"
                        app:layout_constraintTop_toBottomOf="@+id/layout_whitelist"
                >
                    <com.xhd.td.view.TextImageView

                            android:id="@+id/tv_message_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消息中心"
                            android:textColor="@color/tv_black"
                            android:textSize="@dimen/sp_16"
                            android:drawableStart="@drawable/ic_mine_message_center"
                            android:drawablePadding="8dp"
                            app:drawableStartHeight="20dp"
                            app:drawableStartWidth="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                    />

                    <ImageView
                            android:id="@+id/img_message_center"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/back_dark"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_message_center"
                            app:layout_constraintTop_toTopOf="@+id/tv_message_center"
                    />

                    <View
                            android:id="@+id/line_tv_message_center"
                            android:layout_width="0dp"
                            android:layout_height="0.5dp"
                            android:background="@color/tv_hint"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_setting"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="@+id/layout_account"
                        app:layout_constraintEnd_toEndOf="@+id/layout_account"
                        app:layout_constraintTop_toBottomOf="@+id/layout_message_center"
                >

                    <com.xhd.td.view.TextImageView

                            android:id="@+id/tv_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="APP设置"
                            android:textColor="@color/tv_black"
                            android:textSize="@dimen/sp_16"
                            android:drawableStart="@drawable/mine_setting"
                            app:drawableStartHeight="20dp"
                            app:drawableStartWidth="20dp"
                            android:drawablePadding="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                    />

                    <ImageView
                            android:id="@+id/img_setting"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/back_dark"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_setting"
                            app:layout_constraintTop_toTopOf="@+id/tv_setting"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>