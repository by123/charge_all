<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                name="viewModel"
                type="com.xhd.td.vm.login.LoginVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/showLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


        <ImageView
                android:id="@+id/showLogo_img"
                android:layout_width="62dp"
                android:layout_height="68dp"
                android:scaleType="fitXY"
                android:src="@drawable/xhd_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="雪中送电"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_16"
                app:layout_constraintLeft_toLeftOf="@+id/showLogo_img"
                app:layout_constraintRight_toRightOf="@+id/showLogo_img"
                app:layout_constraintTop_toBottomOf="@+id/showLogo_img"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>