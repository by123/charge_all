/* components/TipModal/TipModal.wxss */
.mask {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .7);
}

.modal-main {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  width: 540rpx;
  border-radius: 4rpx;
}

.modal-main .modal-title {
  padding-top: 60rpx;
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  line-height: 50rpx;
  padding-bottom: 20rpx;
}

.modal-main .modal-content {
  padding: 0 40rpx;
}

.modal-main .modal-btns {
  border-top: 1rpx solid #dedede;
  border-bottom-left-radius: 4rpx;
  border-bottom-right-radius: 4rpx;
  overflow: hidden;
  display: flex;
}

.modal-btns .btn {
  height: 100rpx;
  border: none;
  border-radius: 0;
  font-size: 32rpx;
  line-height: 100rpx;
  color: #353648;
  background: #fff;
  flex: 1;
}

.modal-btns .btn::after {
  border: none;
}

.btn-hover {
  background: rgba(0, 0, 0, .1);
}

.modal-main .ok-btn {}

.modal-main .cancel-btn {
  border-right: 1rpx solid #dedede;
}
