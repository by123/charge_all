/* components/ContentList/ContentList.wxss */

.content-list {
  color: #757685;
  font-size: 30rpx;
  line-height: 42rpx;
}

.content-item {
  display: flex;
  padding: 10rpx 0;
}

.item-name {
  flex: 1;
  flex-shrink: 0;
  flex-grow: 1;
}

.item-value {
  flex: 1;
  flex-shrink: 0;
  text-align: right;
  color: #353648;
  flex-grow: 1;
  flex-wrap: wrap;
}