/* components/MyPicker/MyPicker.wxss */

.base-font-color {
  color: #353648;
}

.light-font-color {
  color: #757685;
}

.picker-wrap {
  position: relative;
  align-items: center;
}

.picker-wrap .picker-value {
  margin-right: 10rpx;
  padding-right: 26rpx;
}

.picker-wrap .select-arrow {
  width: 26rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translate(0, -50%);
  height: 26rpx;
  transition: all 0.1s;
}

.picker-mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  z-index: 100;
}

.picker-mask .mask-bg {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}

.picker-main {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  overflow: hidden;
  padding: 40rpx 30rpx;
  height: 700rpx;
}

.picker-main .picker-title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 500;
  position: relative;
  line-height: 56rpx;
}

.picker-confirm {
  position: absolute;
  right: 0;
  top: 0;
  line-height: 56rpx;
  font-size: 32rpx;
  background: none;
}

.picker-main .picker-view {
  height: 100%;
  overflow: hidden;
  color: #353648;
  font-size: 36rpx;
  text-align: center;
}

.picker-item {
  line-height: 100rpx;
}

.light-color {
  color: #dedede;
}

.arrow-down {
  transform: rotate(90deg);
}