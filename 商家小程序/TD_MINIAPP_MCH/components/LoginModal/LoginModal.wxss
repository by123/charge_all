/* components/LoginModal/LoginModal.wxss */

.login-wrap {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
}

.login-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.login-main {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 620rpx;
  background: #fff;
  border-radius: 10rpx;
  line-height: 44rpx;
  text-align: center;
}

.login-title {
  color: #000;
  font-size: 34rpx;
  font-weight: 600;
  padding-top: 50rpx;
}

.login-content {
  font-size: 30rpx;
  color: rgb(136, 136, 136);
  padding: 0 68rpx;
  margin-top: 40rpx;
}

.login-btn {
  margin-top: 53rpx;
  font-size: 34rpx;
  border-top: 1rpx solid rgb(210, 211, 213);
}

.login-btn button {
  color: rgb(103, 194, 65);
  height: 100rpx;
  width: 100%;
  background: #fff;
}

.btn-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}
