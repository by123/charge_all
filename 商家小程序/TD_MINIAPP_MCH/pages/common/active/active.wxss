/* pages/active/active.wxss */

page {
  background: #fce447;
}

.active-wrap {
  position: relative;
  height: 100vh;
  width: 100vw;
}

.active-bg {
  text-align: center;
}

.active-bg image {
  width: 100%;
}

.active-main {
  position: absolute;
  background: #fff;
  top: 106rpx;
  left: 60rpx;
  width: 632rpx;
  border: 1rpx solid #f4f4f6;
  box-shadow: 2rpx 4rpx 20rpx 0 #ffce00;
  border-radius: 4rpx;
  padding: 0 30rpx 40rpx;
}

.active-main .main-title {
  padding: 40rpx 0 21rpx;
  line-height: 50rpx;
  font-weight: 500;
  font-size: 36rpx;
  border-bottom: 1rpx solid #DEDEDE;
}

.active-main .code-wrap {
  margin: 40rpx auto 0;
  width: 432rpx;
  height: 432rpx;
}

.active-main .code-wrap image {
  width: 100%;
  height: 100%;
}

.active-main .code-tip {
  font-size: 32rpx;
  line-height: 44rpx;
  margin-top: 30rpx;
  text-align: center;
}

.active-footer {
  position: absolute;
  bottom: 260rpx;
  left: 0;
  text-align: center;
  font-size: 30rpx;
  width: 100%;
}
