/* pages/mine/bankInfo/bankInfo.wxss */

.bank-empty {

}

.bank-empty .empty-image {
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  margin: 140rpx auto 0;
}

.bank-empty .empty-image image {
  width: 100%;
  height: 100%;
}

.bank-empty .empty-text {
  margin-top: 20rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  text-align: center;
}

.bank-empty .empty-btn {
  margin-top: 186rpx;
  text-align: center;
}

.bank-list {
  padding-top: 20rpx;
}

.bank-list .bank-item {
  width: 600rpx;
  height: 228rpx;
  margin: 0 auto 30rpx;
  position: relative;
}

.bank-list .item-bg {
  width: 100%;
  height: 100%;
}

.bank-list .item-bg image {
  width: 100%;
  height: 100%;
}

.bank-list .item-main {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding: 40rpx 30rpx 0;
  color: #fff;
}

.item-head {
  display: flex;
  align-items: center;
}

.item-head image {
  flex-basis: 70rpx;
  height: 70rpx;
}

.item-name {
  flex: 1;
  margin-left: 20rpx;
}

.item-name .item-title {
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: 600;
}

.item-name .item-type {
  font-size: 24rpx;
}

.item-info {
  margin-top: 40rpx;
  font-size: 24rpx;
  padding-left: 20rpx;
}

.bind-wechat {
  width: 601rpx;
  height: 180rpx;
  margin: 0 auto 30rpx;
  border: 2rpx solid #3DB271;
  border-radius: 4rpx;
  color: #3DB271;
  display: flex;
  align-items: center;
}

.bind-wechat .rule {
  flex: 1;
  margin-left: 30rpx;
}

.bind-wechat .rule-text {
  font-size: 24rpx;
  line-height: 34rpx;
}

.bind-wechat .rule-name {
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: 400;
}

.bind-wechat .bind-btn {
  flex-basis: 150rpx;
  height: 60rpx;
  background: #3DB271;
  border-radius: 4rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  margin-right: 30rpx;
}

.add-bank-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
}

.wechat-item {
  width: 600rpx;
  height: 180rpx;
  margin: 0 auto;
  position: relative;
  margin-bottom: 30rpx;
}

.wechat-item > image {
  width: 100%;
  height: 100%;
}

.wechat-item .wechat-main {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.wechat-main > image {
  flex-basis: 70rpx;
  height: 70rpx;
  margin-left: 30rpx;
  border-radius: 50%;
}

.wechat-content {
  flex: 1;
  color: #fff;
  margin-left: 20rpx;
}

.wechat-name {
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: 600;
}

.wechat-nickname {
  font-size: 24rpx;
  line-height: 34rpx;
}
