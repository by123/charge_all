/* pages/mine/chooseType/chooseType.wxss */

.account-list {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.account-item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  box-shadow: 2rpx 4rpx 20rpx 0 #DEDEDE;
  padding: 42rpx 0;
}

.account-list .account-item:last-child {
  margin-bottom: 0;
}

.account-item .item-icon {
  flex-basis: 46rpx;
  height: 46rpx;
  margin-left: 34rpx;
}

.account-item .item-icon image {
  width: 100%;
  height: 100%;
}

.account-list .item-content {
  margin-left: 20rpx;
  flex: 1;
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: 500;
}

.item-content-rule {
  line-height: 34rpx;
  font-size: 24rpx;
  font-weight: normal;
}

.account-list .item-toggle {
  flex-basis: 32rpx;
  height: 32rpx;
  margin-right: 30rpx;
}

.account-btn {
  position: absolute;
  bottom: 160rpx;
  left: 30rpx;
  width: 690rpx;
}
