/* pages/mine/auth/auth.wxss */
.auth-title {
  font-size: 40rpx;
  line-height: 56rpx;
  margin-top: 20rpx;
  padding: 0 30rpx;
  font-weight: 500;
}

.auth-warn {
  margin-top: 10rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  padding: 0 30rpx;
}

.auth-info {
  margin-top: 30rpx;
  width: 500rpx;
  margin-left: 30rpx;
  height: 164rpx;
  box-shadow: 2rpx 4rpx 20rpx 0 #DEDEDE;
}

.auth-info .info-title {
  padding: 32rpx 40rpx 0;
  font-size: 28rpx;
  line-height: 40rpx;
}

.auth-info .info-data {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.info-data image {
  flex-basis: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  margin-left: 40rpx;
}

.info-data .info-nickname {
  margin-left: 20rpx;
  flex: 1;
  font-size: 30rpx;
  line-height: 42rpx;
}

.auth-tip {
  width: 690rpx;
  margin: 80rpx auto 0;
  border-top: 1rpx solid #dedede;
  padding-top: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #bdbdbd;
}

.tip-item {
  margin-bottom: 20rpx;
}

.auth-btn {
  width: 690rpx;
  position: absolute;
  bottom: 160rpx;
  left: 30rpx;
}