/* pages/mine/addBank/addBank.wxss */

page {
  background: #f4f4f6;
}

.form-list {
  margin-top: 50rpx;
}

.form-list .form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  margin-bottom: 30rpx;
  background: #fff;
}

.form-list .form-item:last-child {
  margin-bottom: 0;
}

.form-list .no-margin {
  margin-bottom: 0;
  border-bottom: 1rpx solid #dedede;
}

.form-list .item-name {
  flex: 2;
  flex-shrink: 0;
}

.form-list .item-input {
  flex: 3;
  flex-shrink: 0;
  text-align: right;
}

.light-color {
  color: #dedede;
}

.form-list .item-input .select-arrow {
  width: 26rpx;
  height: 26rpx;
  transition: all 0.1s;
  position: relative;
  top: 4rpx;
}

.arrow-down {
  transform: rotate(90deg);
}

.arrow-up {
  transform: rotate(270deg);
}

.form-list .item-input input {
  width: 100%;
}

.input-class {
  color: #dedede;
}

.form-submit {
  position: absolute;
  bottom: 180rpx;
  left: 0;
  width: 100%;
  padding: 0 30rpx;
}

.form-submit .btn-wrap {
  padding: 0;
  line-height: 1;
  transition: opacity 0.1s;
  height: 100rpx;
}

.hover-class {
  opacity: 0.7;
}

.bank-input {
  height: 0;
  visibility: hidden;
  width: 0 !important;
  min-height: 0;
}

.form-submit-tip {
  font-size: 28rpx;
  margin-top: 30rpx;
  padding-left: 30rpx;
}

.form-submit-tip image {
  width: 28rpx;
  height: 28rpx;
  position: relative;
  top: 4rpx;
  margin-right: 10rpx;
}

.confirm-wrap {
  position: fixed;
  width: 100vw;
  height: 100vh;
  left: 0;
  top: 0;
  z-index: 100;
}

.confirm-wrap .confirm-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}

.confirm-wrap .confirm-main {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 40rpx 80rpx 68rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.confirm-wrap .confirm-title {
  text-align: center;
  line-height: 56rpx;
  flex-wrap: 500;
  font-size: 40rpx;
}

.confirm-wrap .confirm-list {
  margin-top: 45rpx;
}

.confirm-wrap .confirm-item {
  padding: 15rpx 0;
  line-height: 42rpx;
  font-size: 30rpx;
  display: flex;
}

.confirm-wrap .confirm-item .item-name {
  flex: 1.3;
}

.confirm-wrap .confirm-item .item-value {
  flex: 2;
  text-align: right;
}

.confirm-wrap .confirm-btns {
  margin-top: 65rpx;
  text-align: center;
}

.confirm-wrap .confirm-btn-wrap {
  padding: 0;
  line-height: 1;
  transition: opacity 0.1s;
  display: inline-block;
  width: 240rpx;
  height: 84rpx;
  border-radius: 2rpx;
}
