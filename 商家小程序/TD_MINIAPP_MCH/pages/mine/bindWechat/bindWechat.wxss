/* pages/mine/bindWechat/bindWechat.wxss */

.bind-wechat {

}

.bind-wechat .content {
  position: relative;
  padding: 0 60rpx;
  margin-top: 40rpx;
}

.content image {
  width: 622rpx;
  height: 308rpx;
}

.content-main {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding: 88rpx 104rpx 0;
}

.content-main view {
  font-size: 34rpx;
  line-height: 48rpx;
  font-weight: 500;
}

.content-main .rule {
  margin-top: 44rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: normal;
}

.bind-btn {
  width: 690rpx;
  position: absolute;
  bottom: 160rpx;
  left: 30rpx;
}

.tip-content {
  font-size: 30rpx;
}

.tip-info {
  display: flex;
  align-items: center;
  margin-top: 26rpx;
  margin-bottom: 40rpx;
}

.tip-info .info-avator {
  flex-basis: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.info-nickname {
  flex: 1;
  font-size: 30rpx;
  margin-left: 20rpx;
}