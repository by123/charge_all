/* pages/mine/reset/action/action.wxss */
.action-device {
  padding: 20rpx 0 30rpx;
  margin: 0 30rpx;
  border-bottom: 1rpx solid #dedede;
  font-size: 28rpx;
  line-height: 40rpx;
}

.action-device text {
  margin-left: 21rpx;
}

.action-section {
  padding: 0 30rpx 0 30rpx;
}

.action-section .section-head {
  padding-top: 32rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  position: relative;
  font-weight: 500;
}

