/* pages/money/refund/refund.wxss */
page {
  background: #f4f4f6;
  height: 100%;
  overflow: hidden;
}

.refund-wrap {
  padding-top: 20rpx;
}

.card-wrap {
  margin: 20rpx 0 30rpx;
}

.refund-tip {
  color: #BDBDBD;
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 20rpx 30rpx 30rpx;
}

.refund-tip image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  position: relative;
  top: 4rpx;
}

.reason-content {
  padding: 5rpx 0 20rpx;
  margin-top: 20rpx;
}

.reason-content textarea {
  font-size: 30rpx;
  height: 220rpx;
}

.placeholder-class {
  color: #BDBDBD;
}

.refund-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
}

.refund-content {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
  /* margin-top: 10rpx; */
}

.refund-content view {
  flex: 1;
}

.refund-content input {
  flex: 1;
  text-align: right;
}

.reason-select {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
}

.reason-select .select-title {
  flex-basis: 200rpx;
}

.picker {
  flex: 1;
  text-align: right;
}

.picker-text {
  
}

.picker-text image {
  width: 26rpx;
  height: 26rpx;
  transform: rotate(90deg);
  margin-left: 20rpx;
}