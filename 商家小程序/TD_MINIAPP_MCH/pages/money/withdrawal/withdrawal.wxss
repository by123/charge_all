/* pages/money/withdrawal/withdrawal.wxss */
.withdrawal-wrapper {
  padding: 0 30rpx;
}

.withdrawal-bank {
  width: 690rpx;
  margin: 20rpx auto 0;
  position: relative;
}

.withdrawal-bank .bank-main {
  width: 100%;
  height: 100%;
  padding: 24rpx 0;
  background: rgb(244, 244, 246);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.bank-item {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  line-height: 64rpx;
  padding: 0 30rpx;
}

.bank-item .item-name {
  flex-basis: 240rpx;
  flex-shrink: 0;
}
.bank-item .item-value {
  flex: 1;
  text-align: right;
}

.withdrawal-balance {
  margin-top: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}

.withdrawal-input {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  border-bottom: 1rpx solid #dedede;
}

.placeholder-style {
  color: #bdbdbd;
  font-size: 28rpx;
  /* line-height: 40rpx; */
}

.withdrawal-input text {
  flex-basis: 36rpx;
  font-size: 60rpx;
  line-height: 82rpx;
  margin-right: 10rpx;
}

.withdrawal-input input {
  flex: 1;
  font-size: 60rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-weight: 500;
}

.withdrawal-input view {
  flex-basis: 134rpx;
}

.withdrawal-tip {
  font-size: 28rpx;
  color: #bdbdbd;
  margin-top: 20rpx;
}

.withdrawal-tip image {
  position: relative;
  top: 4rpx;
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.withdrawal-desc {
  margin-top: 50rpx;
  line-height: 40rpx;
  color: #bdbdbd;
  font-size: 28rpx;
}

.withdrawal-desc view:first-child {
  margin-bottom: 10rpx;
}

.withdrawal-btns {
  text-align: center;
  margin-top: 180rpx;
  position: absolute;
  bottom: 160rpx;
  left: 0;
  width: 100%;
  transition: all .1s;
}

.is-focus {
  bottom: 300rpx;
}

.bind-wechat {
  margin: 20rpx auto 0;
  width: 690rpx;
  height: 140rpx;
  background: #F4F4F6;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
}

.bind-wechat > image {
  flex-basis: 76rpx;
  height: 76rpx;
  margin-left: 30rpx;
}

.bind-content {
  margin-left: 20rpx;
  flex: 1;
}

.bind-content .content-name {
  line-height: 42rpx;
  font-size: 30rpx;
}

.bind-content .content-rule {
  line-height: 34rpx;
  font-size: 24rpx;
}

.bind-btn {
  width: 101rpx;
  height: 40rpx;
  border: 2rpx solid #353648;
  line-height: 38rpx;
  text-align: center;
  font-size: 20rpx;
  margin-right: 30rpx;
  background: #fff;
}

.withdrawal-bank {
  display: flex;
  margin-top: 60rpx;
}

.withdrawal-text {
  font-size: 36rpx;
  line-height: 50rpx;
}

.withdrawal-content {
  flex: 1;
  margin-left: 40rpx;
}

.withdrawal-content .section {
  position: relative;
}

.withdrawal-content .section image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.withdrawal-content .section > view {
  padding-left: 52rpx;
}

.withdrawal-content .bank {
  font-size: 36rpx;
  line-height: 50rpx;
}

.withdrawal-content .bank > image {
  margin-top: 4rpx;
}


.withdrawal-content .account {
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 12rpx;
}

.withdrawal-content .account > image {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-top: 4rpx;
}

.withdrawal-arrow {
  flex-basis: 28rpx;
}

.withdrawal-arrow image {
  width: 28rpx;
  height: 28rpx;
}

.withdrawal-rule-list {
  margin-top: 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #DEDEDE;
}

.rule-item {
  padding-left: 18rpx;
  position: relative;
  line-height: 32rpx;
  font-size: 22rpx;
  margin-bottom: 4rpx;
  overflow: hidden;
}

.rule-item::after {
  content: '';
  background: #757685;
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  left: 0;
  top: 10rpx;
}


.modal-wrap {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(7,7,7,0.70);
}

.modal {
  text-align: center;
  padding-top: 240rpx;
}

.success-text {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #FCE447;
  line-height: 140rpx;
  color: #353648;
  font-size: 48rpx;
  margin: 0 auto;
}

.success-count {
  font-size: 32rpx;
  color: #FFFFFF;
  margin-top: 40rpx;
}

