  color: #353648;
}

.light-font-color {
  color: #757685;
}

.base-bg-color {
  background-color: #f4f4f6;
}

/* 相对定位居中 */

.center {
  position: absolute;
  left: 50%;
  top: 50%;
  height: 100%;
  transform: translate(-50%, -50%);
}

/* 浮动 */

.fl {
  float: left;
}

.fr {
  float: right;
}

.clearfix:after {
  content: " ";
  display: block;
  clear: both;
}

/* 铺满的图片 */

