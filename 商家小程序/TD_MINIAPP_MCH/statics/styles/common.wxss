page, view, text, image, scroll-view, input, button, textarea {
  box-sizing: border-box;
}

.hide {
  display: none;
}

/* 单行溢出隐藏 */

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 多行文本溢出隐藏，line-clamp为显示的行数 */

.mutiple-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

